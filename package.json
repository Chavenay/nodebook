{
  "name": "nodebook",
  "version": "0.6.0",
  "description": "Node.js, bonnes pratiques de d√©veloppement.",
  "bin": "./bin/cli.js",
  "scripts": {
    "build:html": "node bin/build.js index.adoc chapter-*/index.adoc foreword/*.adoc appendix-*/*.adoc",
    "format": "prettier-eslint --write 'chapter*/**/*.js'",
    "install:all": "ls . | grep -E '(chapter|appendix)' | xargs -I '{}' -L 1 bash -c 'cd $(realpath {}) && echo $(pwd) && npm install'",
    "lint": "eslint --fix '**/*.js'",
    "prestart": "npm run build:html",
    "start": "node server.js",
    "test": "tape -r babel-register 'tests/*.js' | faucet",
    "posttest": "npm run lint"
  },
  "engines": {
    "node": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/oncletom/nodebook.git"
  },
  "keywords": [
    "nodejs",
    "book",
    "french"
  ],
  "author": "Thomas Parisot (https://oncletom.io)",
  "license": "CC-BY-NC-SA-3.0",
  "bugs": {
    "url": "https://github.com/oncletom/nodebook/issues"
  },
  "homepage": "https://oncletom.io/node.js",
  "dependencies": {
    "finalhandler": "^1.1.0",
    "get-port": "^3.2.0",
    "lodash": "^4.17.4",
    "opn": "^5.1.0",
    "serve-static": "^1.13.1",
    "tap-bail": "^1.0.0",
    "update-notifier": "^2.3.0",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "asciidoctor-extension-interactive-runner": "^1.0.0",
    "asciidoctor.js": "^1.5.6-preview.4",
    "babel-register": "^6.26.0",
    "blue-tape": "^1.0.0",
    "chokidar": "^2.0.0",
    "eslint": "^4.14.0",
    "eslint-plugin-react": "^7.5.1",
    "faucet": "0.0.1",
    "prettier-eslint": "^3.0.2",
    "prettier-eslint-cli": "^1.1.0",
    "tape-spawn": "^1.4.2"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "es6": true,
      "node": true,
      "commonjs": true
    },
    "rules": {
      "callback-return": 2,
      "curly": 2,
      "eqeqeq": 2,
      "global-require": 2,
      "handle-callback-err": 2,
      "no-console": 0,
      "no-path-concat": 1,
      "no-sync": 1,
      "no-undef": 2,
      "no-unused-vars": 1,
      "no-use-before-define": 1,
      "quotes": [
        "error",
        "single"
      ],
      "strict": [
        2,
        "global"
      ]
    }
  }
}
